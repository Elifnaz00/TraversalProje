@model SendMessageDto

<form method="post" action="SendMessage" class="signin-form">
    <div class="input-grids">
        <div class="form-group">
            <input type="text" asp-for=Name placeholder="Adınız*" class="contact-input" />
            
        </div>
        <div class="form-group">
            <input type="email" asp-for=Mail placeholder="Mail Adresiniz*" class="contact-input" required="" />
            <span asp-validation-for="Mail" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="text" asp-for=Subject  placeholder="Mesaj Konusu*" class="contact-input" />
            <span asp-validation-for="Subject"></span>
        </div>
    </div>
    <div class="form-group">
        <textarea   placeholder="Mesaj İçeriğini Yazınız*"  asp-for=MessageBody required=""></textarea>
        <span asp-validation-for="MessageBody"></span>
    </div>
    <div class="text-right">
        <button class="btn btn-style btn-primary">Mesajı Gönder</button>
    </div>
</form>
