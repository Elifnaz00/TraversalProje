@model List<DestinationModel>


<div class="price-box">
    <div class="grid grid-column-2">
        @foreach (var item in Model)
        {
            <div class="column pr-img-gd">
                <h6 class="pricehead">
                    <span class="fa fa-delicious mr-2" aria-hidden="true"></span> @item.City
                </h6>
            </div>
            <div class="column text-lg-center">
                <p class="price-title">@item.DayNight</p>
            </div>
            <div class="column price-number text-md-right">
                <h3 class="pricing">
                    <sup class="pri1">$</sup>@item.Price
                </h3>
                <a href="/Reservation/StepReservation/" class="btn btn-style btn-primary ml-lg-3"> Rezervasyon  </a>
            </div>
        }

    </div>
</div>

