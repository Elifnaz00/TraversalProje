@using EntityLayer.Concrate
@model List<Reservation>
@{
    ViewData["Title"] = "RezervationUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Kullanıcının Geçmiş Rezervasyonları</h1>


<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Misaafir Ad Soyad</th>
            <th>Rota</th>
            <th>Kişi Sayısı</th>
            <th>Tarih</th>
            <th>Detaylar</th>

        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @{
                    count = count + 1;
                }
                <td>@count</td>
                <td>@item.AppUser.Name + @item.AppUser.SurName</td>
                <td>@item.Destination.City </td>
                <td>@item.PersonCount </td>
                <td>(((DateTime)item.ReservastionDate).ToString("dd-MMM-yyyy")) </td>
                <td><a href="" class="btn btn-outline-primary">Detaylar</a></td>
               

                <td></td>
            </tr>
        }

    </tbody>
</table>
<a href="/Login/SignUp/" class="btn btn-outline-primary">Yeni Tur Rotası Oluştur</a>